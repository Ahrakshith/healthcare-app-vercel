{
  "version": 2,
  "builds": [
    {
      "src": "build/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://healthcare-app-vercel.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Authorization, x-user-uid, Content-Type, Accept" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    },
    {
      "source": "/(.*)\\.(html|js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/audio/translate",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/chats/:patientId/:doctorId",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/users/:uid",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/misc/logout",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/misc/notify-missed-dose",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/misc/uploadImage/:patientId",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/:path*",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}